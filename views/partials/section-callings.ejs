<section id="callings" class="section">
  <h2>Callings Management</h2>
  <div class="section-toolbar callings-toolbar improved-toolbar">
    <div class="callings-toolbar-row">
      <input type="text" id="callingsSearch" class="callings-search" placeholder="Search callings..." />
      <div class="callings-toolbar-buttons">
        <button class="btn-secondary" id="callingsImportBtn"><i class="fas fa-file-import"></i> Import</button>
        <button class="btn-secondary" id="callingsExportBtn"><i class="fas fa-file-export"></i> Export</button>
        <button class="btn-secondary" id="callingsSyncBtn"><i class="fas fa-sync-alt"></i> Sync</button>
        <button class="btn-primary callings-AddCalling" onclick="openAddCalling()"><i class="fas fa-plus"></i> Add</button>
      </div>
    </div>
  </div>
  <div id="callingsTable" class="callings-table">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Level</th>
          <th>Has Title</th>
          <th>Title</th>
          <th>Title Ordinal</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="callingsBody">
        <!-- Callings rows will be dynamically generated by JavaScript -->
      </tbody>
    </table>
  </div>
</section>
