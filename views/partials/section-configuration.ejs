<section id="configuration" class="section">
  <h2>System Configuration</h2>
  <div class="section-toolbar configuration-toolbar improved-toolbar">
    <div class="config-toolbar-row">
      <input type="text" id="configurationSearch" class="config-search" placeholder="Search configuration..." />
      <div class="config-toolbar-buttons">
        <button class="btn-secondary" id="configImportBtn">Import</button>
        <button class="btn-secondary" id="configExportBtn">Export</button>
        <button class="btn-secondary" id="configRekeyBtn">Encryption Rekey</button>
        <button class="btn-secondary" id="configCloudMigrateBtn">Cloud Store Migration</button>
        <button class="btn-primary" id="configAddBtn">Add Setting</button>
      </div>
    </div>
  </div>
  <div id="configurationTable" class="configuration-table">
    <table>
      <thead>
        <tr>
          <th>Setting</th>
          <th>Value</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="configurationBody">
        <!-- Configuration rows will be dynamically generated by JavaScript -->
      </tbody>
    </table>
  </div>
</section>
