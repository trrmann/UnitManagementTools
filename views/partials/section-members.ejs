<section id="members" class="section">
  <h2>Member Directory</h2>
  <div class="section-toolbar">
    <div class="flex-row-wrap">
      <input type="text members-SearchMember" id="memberSearch" placeholder="Search members..." class="search-input" onkeyup="filterMembers()" />
      <button class="btn-secondary" id="syncMembersBtnMembers">
        <i class="fas fa-sync-alt"></i> Sync Members
      </button>
      <button class="btn-primary members-AddMember" onclick="openAddMember()">
        <i class="fas fa-user-plus"></i> Add Member
      </button>
    </div>
  </div>
  <div id="membersTable" class="members-table">
    <table>
      <thead>
        <tr>
          <th id="nameHeader">Name</th>
          <th id="emailHeader">Email</th>
          <th id="genderHeader">Gender</th>
          <th id="memberNumberHeader">Member #</th>
          <th id="phoneHeader">Phone</th>
          <th id="unitHeader" class="hidden">Unit</th>
          <th id="callingHeader">Calling</th>
          <th id="stakeNumberHeader">Stake #</th>
          <th id="unitNumberHeader">Unit #</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="membersBody">
        <!-- Member rows will be dynamically generated by JavaScript -->
      </tbody>
    </table>
    <div class="centered-margin">
      <label for="membersPageSize">Rows per page:</label>
      <select id="membersPageSize" onchange="changeMembersPageSize()" class="margin-x">
        <option value="5">5</option>
        <option value="10" selected>10</option>
        <option value="20">20</option>
        <option value="50">50</option>
        <option value="100">100</option>
      </select>
    </div>
    <div id="membersPagination" class="pagination centered-margin"></div>
  </div>
</section>
