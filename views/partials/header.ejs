<!-- Header -->
<header class="header">
  <div class="header-content">
    <div class="logo-container">
      <img src="/images/church-logo.png" alt="The Church of Jesus Christ of Latter-day Saints" class="church-logo" />
    </div>
    <div class="dashboard-title-col">
      <div class="dashboard-title-row">
        <h1 class="dashboard-title">Unit Management Tools</h1>
      </div>
      <p>The Church of Jesus Christ of Latter-day Saints</p>
      <p class="subtitle">Ward Management Tools</p>
    </div>
    <div class="user-menu-container">
      <button id="logout" class="btn-logout">Logout</button>
      <button id="userMenuToggle" class="user-menu-toggle" aria-label="Toggle user menu">
        <span id="userMenuToggleIcon" class="fa fa-bars"></span>
      </button>
      <div class="user-menu">
        <span id="userName">John Smith</span>
        <select id="roleSelector" class="role-selector hidden" title="Select user role">
          <option value="">Select Role</option>
        </select>
        <div id="selectedRoles" class="user-roles"></div>
      </div>
    </div>
  </div>
</header>
