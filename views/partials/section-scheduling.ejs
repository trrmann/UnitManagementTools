<section id="scheduling" class="section">
  <h2>Ward Scheduling</h2>
  <div class="section-toolbar">
    <button class="btn-primary scheduling-ScheduleEvent" onclick="openScheduleEvent()">
      <i class="fas fa-calendar-plus"></i> Schedule Event
    </button>
    <select id="scheduleFilter" onchange="filterSchedule()" class="filter-select scheduling-FilterEventTypes scheduling-FilterEventDates" title="Filter events">
      <option value="">All Events</option>
      <option value="sacrament">Sacrament Meeting</option>
      <option value="activities">Activities</option>
      <option value="meetings">Meetings</option>
    </select>
  </div>
  <div class="calendar-view" id="calendarGrid">
    <!-- Calendar will be generated by JavaScript -->
  </div>
  <div class="events-list">
    <h3>Upcoming Events</h3>
    <!-- Event items go here (see index.html for structure) -->
  </div>
</section>
