<section id="users" class="section">
  <h2>Users Management</h2>
  <div class="section-toolbar users-toolbar improved-toolbar">
    <div class="users-toolbar-row">
      <input type="text" id="usersSearch" class="users-search" placeholder="Search users..." />
      <input type="text" id="membersSearch" class="members-search" placeholder="Search members..." />
      <div class="users-toolbar-buttons">
        <button class="btn-secondary" id="importUsersBtn"><i class="fas fa-file-import"></i> Import Users</button>
        <button class="btn-secondary" id="importMembersBtn"><i class="fas fa-file-import"></i> Import Members</button>
        <button class="btn-secondary" id="exportUsersBtn"><i class="fas fa-file-export"></i> Export Users</button>
        <button class="btn-secondary" id="exportMembersBtn"><i class="fas fa-file-export"></i> Export Members</button>
        <button class="btn-secondary" id="syncMembersBtnUsers"><i class="fas fa-sync-alt"></i> Sync Members</button>
        <button class="btn-primary users-AddUser" id="addUserBtn" onclick="openAddUser()"><i class="fas fa-user-plus"></i> Add User</button>
        <button class="btn-primary users-AddMember" id="addMemberBtn" onclick="openAddMember()"><i class="fas fa-user-plus"></i> Add Member</button>
      </div>
    </div>
  </div>
  <div id="usersTable" class="users-table">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Member #</th>
          <th>Roles</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="usersBody">
        <!-- Users rows will be dynamically generated by JavaScript -->
      </tbody>
    </table>
  </div>
</section>
