<section id="organization" class="section">
  <h2>Organization Structure</h2>
  <div class="section-toolbar organization-toolbar improved-toolbar">
    <div class="config-toolbar-row">
      <input type="text" id="organizationSearch" class="config-search" placeholder="Search organization..." />
      <div class="config-toolbar-buttons">
        <button class="btn-secondary" id="orgImportBtn">Import</button>
        <button class="btn-secondary" id="orgExportBtn">Export</button>
        <button class="btn-primary" id="orgAddBtn">Add Stake</button>
      </div>
    </div>
  </div>
  <div id="organizationTable" class="organization-table">
    <table>
      <thead>
        <tr>
          <th>Unit Name</th>
          <th>Unit Number</th>
          <th>Unit Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="organizationBody">
        <!-- Organization rows will be dynamically generated by JavaScript -->
      </tbody>
    </table>
  </div>
</section>
