<section id="roles" class="section">
  <h2>Roles Management</h2>
  <div class="section-toolbar roles-toolbar improved-toolbar">
    <div class="roles-toolbar-row">
      <input type="text" id="rolesSearch" class="roles-search" placeholder="Search roles..." />
      <div class="roles-toolbar-buttons">
        <button class="btn-secondary" id="rolesImportBtn"><i class="fas fa-file-import"></i> Import</button>
        <button class="btn-secondary" id="rolesExportBtn"><i class="fas fa-file-export"></i> Export</button>
        <button class="btn-primary roles-AddRole" onclick="openAddRole()"><i class="fas fa-plus"></i> Add</button>
      </div>
    </div>
  </div>
  <div id="rolesTable" class="roles-table">
    <table>
      <thead>
        <tr>
          <th>Role Name</th>
          <th>Calling Name</th>
          <th>Sub Role Names</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="rolesBody">
        <!-- Roles rows will be dynamically generated by JavaScript -->
      </tbody>
    </table>
  </div>
</section>
