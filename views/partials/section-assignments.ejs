    <button class="btn-primary assignments-AssignTask" onclick="openNewAssignment()">
      <i class="fas fa-plus"></i> New Assignment
    </button>
    <select id="filterAssignments" onchange="filterAssignments()" class="filter-select assignments-FilterTasks" title="Filter assignments">
