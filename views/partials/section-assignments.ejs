      <option value="active">Active</option>
      <option value="completed">Completed</option>
      <option value="overdue">Overdue</option>
    </select>
  </div>
  <div class="assignments-list">
    <!-- Assignment cards go here (see index.html for structure) -->
  </div>
</section>
